{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow mx-auto pb-3 pt-2 mb-5 col-10">
            <div class="card-header bg-white text-center">
                <h2>{{ post.title }}</h2>
            </div>
            <div class="card-body mb-3 mt-3">
                <p class="card-text">{{ post.content }}</p>
            </div>
            <div class="card-footer bg-white">
                <p class="card-text author">Ecrit par {{ post.author }} le {{ post.createdAt | date('d/m/Y') }} Ã  {{ post.createdAt
                    | date('H:i') }}</p>
                <div class="text-right">
                    <a href="/posts" class="btn btn-dark" role="button"><i class="fas fa-angle-double-left"></i></a>
                    <a href="/post/update/{{ post.id }}" class="btn btn-dark" role="button"><i class="fas fa-edit"></i></a>
                    <a href="/post/delete/{{ post.id }}" class="btn btn-dark" role="button"><i class="fas fa-trash-alt"></i></a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}